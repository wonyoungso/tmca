<div id="cNews" class="cNews">
  <div class="left">
    <h2 class="HV">current news</h2>
  </div>
  
  <div class="right">
    <% if @latest_news != nil %>
      <h3 class="HV"><%= @latest_news.title %></h3>
      <div class="date">
        <p><%= @latest_news.created_at.strftime("%Y/%m/%d %H:%M") %></p>
      </div>
      <div class="description">
        <%= simple_format(@latest_news.description) %>
      </div>
      
       <% @latest_news.pdfs.each do |pdf| %>
        <%= link_to pdf.attachment_file_name, pdf.attachment.url, :class => 'downloadBtn', :style => 'width:27px' %> 
        <%= pdf.attachment_file_name %>
        <div style="margin-bottom:15px"></div>
      <% end %>
      <div class="CB"></div>
    <% else %>
      최근 뉴스가 없습니다.
    <% end %>
  </div>
  <div class="CB"></div>
</div>
<div id="news_chunks" class="newsChunk">
  <div class="left">
    <h2 class="HV">news</h2>
  </div>
  
  <div class="right">
    
    <% @news_chunks.each do |news| %>
      <div class="pastNews">
        <%= link_to news.title, news_path(news), :rel => news.id, :class => "HV" %> <span class="date"><%= time_ago_in_words(news.created_at) %>전</span>
      </div>
    <% end %>
  </div>
  <div class="CB"></div>
</div>

