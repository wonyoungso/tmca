  <%= render 'admin/events/tabs' %>
  <div class="content">
    <h2 class="title">
      이벤트 수정
    </h2>
    <div class="inner">
      <%= form_tag admin_event_path(@event), :multipart => true, :class => 'form' do %>
        
        <%= hidden_field_tag '_method', 'put' %>
        <div class="group">
          <%= label_tag 'event[title]', '제목' %>
          <%= text_field_tag 'event[title]', @event.title, :class => 'text_field' %>
