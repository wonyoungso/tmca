          <%= date_select 'event', 'start_date', :default => @event.start_date %>
        </div>
        
        <div class="group">
          <%= label_tag 'event[end_date]', '교육프로그램 종료일' %>
          <%= date_select 'event', 'end_date', :default => @event.end_date %>
        </div>
        
        <div class="group">
          <%= label_tag 'event[description]', '내용' %>
          <%= text_area_tag 'event[description]', @event.description, :class => 'text_area', :id => 'eventNewTextArea' %>
