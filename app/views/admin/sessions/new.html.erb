<h2>
  관리자 페이지 로그인
</h2>
  <div class="flash">
  <% flash.each do |type, message| %>
    <div class="message <%= type %>">
      <p><%= message %></p>
    </div>
  <% end %>
  </div>


<%= form_tag admin_sessions_path, :class => 'form-horizontal' do %>
  <div class="control-group">
    <%= label_tag 'login', '아이디', :class => 'control-label' %>
    <div class="controls">
      <%= text_field_tag 'login', '', :class => 'input-xlarge' %>
    </div>
  </div>
  
  <div class="control-group">
    <%= label_tag 'password', '비밀번호', :class => 'control-label' %>
    <div class="controls">
      <%= password_field_tag 'password', '', :class => 'input-xlarge'  %>
    </div>
  </div>
  
  <div class="form-actions">
    <%= button_tag '로그인', :class => 'btn btn-privary' %>
  </div>
  
  
<% end %>
